{% extends 'layout.html.twig' %}

{% block drawer_content %}
    {{ form_start(form, {'attr': {'class': 'form-behavior'}}) }}
        <div class="report-filter">
            {{ form_row(form.localName) }}
            {{ form_row(form.dateFrom) }}
            {{ form_row(form.dateTo) }}
            <div class="form-row report-filter__button">
                {{ form_widget(form.submit) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block content %}
    <section>
        <h3 class="h3 panel-title">Raport</h3>
        <app-rwd-table wc-lazy>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Nazwa</th>
                        <th scope="col" class="text-center">Data</th>
                        <th scope="col" class="text-center">Godzina</th>
                        <th scope="col" class="text-center">UÅ¼ytkownik</th>
                        <th scope="col" class="text-center">Lokal</th>
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr>
                        <th scope="row" class="text-center">{{ item.name }}</th>
                        <td class="text-center">{{ item.createdAt|date('Y-m-d') }}</td>
                        <td class="text-center">{{ item.createdAt|date('H:i') }}</td>
                        <td class="text-center">{{ item.username }}</td>
                        <td class="text-center">{{ item.localName }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </app-rwd-table>
    </section>
{% endblock %}
